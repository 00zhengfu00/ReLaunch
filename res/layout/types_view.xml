<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <ListView android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1" android:id="@+id/types_lv" android:fadeScrollbars="false"></ListView>
    <LinearLayout android:background="#ffffff" android:layout_width="fill_parent" android:id="@+id/linearLayout1" android:baselineAligned="false" android:layout_height="86dp">
        <Button android:id="@+id/types_ok" android:layout_gravity="center" android:text="OK" android:layout_weight="1" android:layout_width="0dp" android:layout_height="fill_parent"></Button>
        <Button android:layout_weight="1" android:id="@+id/types_new" android:layout_gravity="center" android:text="Add new" android:layout_width="0dp" android:layout_height="fill_parent"></Button>
        <Button android:layout_weight="1" android:text="Cancel" android:layout_width="0dp" android:id="@+id/types_cancel" android:layout_gravity="center" android:layout_height="fill_parent"></Button>
    </LinearLayout>
</LinearLayout>
