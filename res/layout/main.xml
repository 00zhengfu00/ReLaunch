<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout1" android:layout_gravity="center" android:layout_weight="0.1" android:layout_height="0dp" android:minHeight="32dp">
        <ImageButton android:src="@android:drawable/ic_menu_preferences" android:layout_weight="1" android:layout_width="0dp" android:id="@+id/settings_btn" android:layout_gravity="center" android:layout_height="fill_parent"></ImageButton>
        <ImageButton android:src="@android:drawable/ic_menu_search" android:layout_weight="1" android:layout_width="0dp" android:id="@+id/search_btn" android:layout_height="fill_parent" android:layout_gravity="center"></ImageButton>
        <ImageButton android:layout_weight="1" android:layout_width="0dp" android:src="@android:drawable/ic_menu_myplaces" android:id="@+id/lru_btn" android:layout_height="fill_parent" android:layout_gravity="center"></ImageButton>
        <ImageButton android:layout_width="0dp" android:id="@+id/favor_btn" android:layout_weight="1" android:src="@android:drawable/btn_star" android:layout_height="fill_parent" android:layout_gravity="center"></ImageButton>
        <ImageButton android:src="@android:drawable/ic_menu_info_details" android:layout_weight="1" android:layout_width="0dp" android:id="@+id/about_btn" android:layout_height="fill_parent" android:layout_gravity="center"></ImageButton>
    </LinearLayout>
    <EditText android:id="@+id/title_txt" android:textColor="#ffffff" android:background="#000000"  android:textAppearance="?android:attr/textAppearanceMedium"  android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="textMultiLine" android:focusable="false" android:editable="false">
        <requestFocus></requestFocus>
    </EditText>
    <LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout2" android:layout_height="68dp">
        <Button android:text="Go one level up" android:drawableLeft="@drawable/arrow_up" android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/goup_btn" android:layout_weight="0.5" android:drawableRight="@drawable/arrow_up"></Button>
        <Button android:text="Advanced" android:layout_width="fill_parent" android:layout_weight="1" android:layout_height="fill_parent" android:id="@+id/advaned_btn"></Button>
    </LinearLayout>
    <ListView android:layout_width="fill_parent" android:id="@+id/fl_list" android:layout_weight="1" android:layout_height="0dp" android:fadeScrollbars="false"></ListView>
</LinearLayout>
