<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="0.0">
        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:maxLines="1" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="TextView" android:id="@+id/results_title" android:layout_gravity="center" android:layout_weight="1"></TextView>
        <ImageButton android:src="@drawable/arrow_left" android:layout_weight="0.1" android:id="@+id/results_btn" android:layout_height="32dp" android:layout_width="32dp"></ImageButton>
    </LinearLayout>
    <ListView android:layout_width="fill_parent" android:layout_height="0dp" android:id="@+id/results_list" android:layout_weight="1"></ListView>
</LinearLayout>
