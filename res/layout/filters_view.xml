<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:background="@color/normal_bg" android:padding="8dp">

    <LinearLayout
        android:id="@+id/LinearLayoutTitle"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:minHeight="32dp" >

        <EditText
            android:id="@+id/filters_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/normal_bg_gray"
            android:editable="false"
            android:focusable="false"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:text="@string/filters_view_layout_title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/normal_fg"
            android:textStyle="bold" >

            <requestFocus />
        </EditText>

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_weight="4"
            android:src="@android:drawable/ic_menu_revert" />

    </LinearLayout>

    <ListView android:id="@+id/filters_lv" android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1" android:fadeScrollbars="false" android:background="@color/normal_bg" android:divider="@color/normal_transparent" android:layout_marginTop="8dp"></ListView>
    <LinearLayout android:id="@+id/linearLayout1" android:background="@color/normal_bg" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="0.02" android:baselineAligned="false" android:layout_marginTop="4dp">
        <Button android:id="@+id/filters_ok" android:layout_gravity="center" android:text="@string/filters_view_layout_ok" android:layout_width="0dp" android:layout_height="fill_parent" android:layout_weight="1"></Button>
        <Button android:id="@+id/filters_new" android:layout_gravity="center" android:text="@string/filters_view_layout_add_new" android:layout_width="0dp" android:layout_height="fill_parent" android:layout_weight="1" android:layout_marginLeft="4dp"></Button>
        <Button android:id="@+id/filters_andor" android:text="@string/filters_view_layout_and" android:layout_width="0dp" android:layout_height="fill_parent" android:layout_weight="1" android:layout_marginLeft="4dp"></Button>
        <Button android:id="@+id/filters_cancel" android:text="@string/filters_view_layout_cancel" android:layout_width="0dp" android:layout_gravity="center" android:layout_height="fill_parent" android:layout_weight="1" android:layout_marginLeft="4dp"></Button>
    </LinearLayout>
</LinearLayout>
