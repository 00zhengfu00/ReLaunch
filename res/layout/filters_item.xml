<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent" 
	android:id="@+id/linearLayout1"
    android:orientation="vertical">
    <TableLayout android:layout_width="fill_parent" android:stretchColumns="1" android:paddingBottom="0dp" android:paddingRight="10dp" android:id="@+id/tableLayout1" android:layout_height="wrap_content" android:paddingTop="5dp" android:layout_weight="1">
        <TableRow android:layout_height="wrap_content" android:id="@+id/tableRow1" android:layout_width="wrap_content">
            <TextView android:text="@string/filters_item_layout_rule" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_height="wrap_content" android:layout_gravity="center" android:layout_width="wrap_content" android:id="@+id/filters_name_title"></TextView>
            <LinearLayout android:paddingBottom="10dp" android:id="@+id/linearLayout2" android:layout_weight="1" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent">
                <Spinner android:id="@+id/filters_method" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="0dp" android:layout_gravity="center" ></Spinner>
                <ImageButton android:id="@+id/filters_delete" android:src="@android:drawable/ic_delete" android:layout_width="0dp" android:layout_gravity="center" android:layout_height="fill_parent" android:layout_weight="0.2"></ImageButton>
            </LinearLayout>
        </TableRow>
        <TableRow android:layout_height="wrap_content" android:id="@+id/tableRow2" android:layout_width="wrap_content">
            <TextView android:text="@string/filters_item_layout_value" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/filters_type_title" android:layout_height="wrap_content" android:layout_gravity="center" android:layout_width="wrap_content"></TextView>
            <LinearLayout android:paddingBottom="10dp" android:id="@+id/linearLayout2" android:layout_weight="1" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent">
                <Button android:id="@+id/filters_type" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_gravity="center"></Button>
            </LinearLayout>
         </TableRow>
         <TableRow android:layout_height="wrap_content" android:id="@+id/tableRow3" android:layout_width="wrap_content">
            <TextView android:text="Value:" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/filters_pad1" android:layout_height="wrap_content" android:layout_gravity="center" android:layout_width="wrap_content" android:visibility="invisible"></TextView>
            <TextView android:id="@+id/filters_condition" android:text="@string/filters_item_layout_and" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_gravity="center" android:layout_height="fill_parent" android:gravity="center" android:layout_width="fill_parent"></TextView>
         </TableRow>        
    </TableLayout>
</LinearLayout>
