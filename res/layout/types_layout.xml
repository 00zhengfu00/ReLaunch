<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent" 
	android:id="@+id/linearLayout1"
    android:orientation="vertical" android:background="@color/normal_bg" android:paddingBottom="8dp">
    <TableLayout android:layout_width="fill_parent" android:stretchColumns="1" android:paddingBottom="0dp" android:paddingRight="10dp" android:id="@+id/tableLayout1" android:layout_height="wrap_content" android:paddingTop="5dp" android:layout_weight="1">
        <TableRow android:layout_height="wrap_content" android:id="@+id/tableRow1" android:layout_width="wrap_content">
            <TextView android:text="@string/types_layout_file_suffix" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/types_ext_title" android:layout_height="fill_parent" android:layout_gravity="right|center_vertical" android:layout_width="wrap_content" android:textColor="@color/normal_fg" android:textStyle="bold" android:gravity="right|center_vertical" android:paddingBottom="8dp"></TextView>
            <LinearLayout android:paddingBottom="10dp" android:id="@+id/linearLayout2" android:layout_weight="1" android:layout_height="fill_parent" android:layout_gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent">
                <Button android:id="@+id/types_ext" android:layout_height="fill_parent" android:layout_weight="1" android:layout_width="wrap_content" android:layout_marginLeft="4dp" android:gravity="center_vertical" android:layout_gravity="center_vertical"></Button>
                <ImageButton android:src="@drawable/ci_arrowup" android:layout_width="42dp" android:layout_gravity="center" android:layout_height="42dp" android:id="@+id/types_up" android:layout_marginLeft="4dp" android:background="@drawable/main_button"></ImageButton>
                <ImageButton android:src="@drawable/ci_arrowdown" android:layout_width="42dp" android:layout_gravity="center" android:layout_height="42dp" android:id="@+id/types_down" android:layout_marginLeft="4dp" android:background="@drawable/main_button"></ImageButton>
                <ImageButton android:src="@drawable/ci_delsmall" android:layout_width="42dp" android:layout_gravity="center" android:layout_height="42dp" android:id="@+id/types_delete" android:layout_marginLeft="4dp" android:background="@drawable/main_button"></ImageButton>
            </LinearLayout>
        </TableRow>
        <TableRow android:layout_height="wrap_content" android:id="@+id/tableRow2" android:layout_width="wrap_content">
            <TextView android:text="@string/types_layout_application" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/types_app_title" android:layout_height="wrap_content" android:layout_gravity="right|center_vertical" android:layout_width="wrap_content" android:textColor="@color/normal_fg" android:textStyle="bold" android:gravity="right|center_vertical"></TextView>
            <LinearLayout android:baselineAligned="true" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:layout_width="wrap_content">
                <Button android:layout_gravity="center" android:id="@+id/types_app" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="wrap_content" android:layout_marginLeft="4dp"></Button>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="0.2" android:src="@drawable/icon" android:id="@+id/types_img"></ImageView>
            </LinearLayout>
        </TableRow>
    </TableLayout>
    <TextView android:layout_weight="1" android:background="#ffffff" android:textAppearance="?android:attr/textAppearanceSmall" android:textColor="#ffffff" android:id="@+id/types_separator" android:layout_width="fill_parent" android:layout_height="2dp"></TextView>
</LinearLayout>
