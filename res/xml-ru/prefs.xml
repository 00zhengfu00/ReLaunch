<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Общие">
       <CheckBoxPreference android:key="filterResults" android:summaryOff="Показывать все файлы" android:summaryOn="Показывать только файлы, соответствующие фильтру" android:title="Файловый фильтр" android:persistent="true" android:defaultValue="false"></CheckBoxPreference>
       <CheckBoxPreference android:key="fullScreen"    android:summaryOff="Показывать системный заголовок" android:summaryOn="Использовать весь экран" android:title="Полноэкранный режим" android:persistent="true" android:defaultValue="true"></CheckBoxPreference>
       <CheckBoxPreference android:key="showButtons"   android:summaryOff="Не показывать кнопки на главной странице" android:summaryOn="Показывать кнопки на главной странице" android:title="Кнопки на главной странице" android:persistent="true" android:defaultValue="true"></CheckBoxPreference>
       <EditTextPreference android:key="startDir"      android:enabled="true" android:title="Начальная папка" android:selectable="true" android:persistent="true" android:defaultValue="/sdcard" android:summary="Начинать просмотр с нее, если указано (см. ниже)"></EditTextPreference>
       <CheckBoxPreference android:key="saveDir"       android:summaryOff="Начинать с указанной папки (см. выше)" android:summaryOn="Начинать с последней посещенной папки" android:title="Сохранять последнюю посещенную папку" android:persistent="true" android:defaultValue="true"></CheckBoxPreference>
       <CheckBoxPreference android:key="askAmbig"      android:summaryOff="Использовать первую найденную" android:summaryOn="Предложить выбор пользователю" android:title="Избыточные ассоциации" android:persistent="true" android:defaultValue="false"></CheckBoxPreference>
       <CheckBoxPreference android:key="showNew"       android:summaryOff="Показывать все файлы как обычно" android:summaryOn="Использовать цвет/шрифт для отображения новых и прочитанных книг" android:title="Отображать новые/прочитанные книги" android:persistent="true" android:defaultValue="true"></CheckBoxPreference>
       <CheckBoxPreference android:key="openWith"      android:summaryOff='Не показывать пункт \"Открыть с помощью...\" в контекстом меню файла' android:summaryOn='Показывать пункт \"Открыть с помощью...\" в контекстом меню файла' android:title='Пункт меню \"Открыть с помощью...\"' android:persistent="true" android:defaultValue="true"></CheckBoxPreference>
       <CheckBoxPreference android:key="createIntent"  android:summaryOff='Не показывать пункт \"Создать событие...\" в контекстном меню файла' android:summaryOn='Показывать пункт \"Создать событие...\" в контекстном меню файла' android:title='Пункт меню \"Создать событие...\"' android:persistent="true" android:defaultValue="true"></CheckBoxPreference>
       <ListPreference android:entries="@array/GL16_modes_names" android:entryValues="@array/GL16_modes_values" android:key="gl16Mode" android:enabled="true" android:selectable="true" android:defaultValue="5" android:persistent="true" android:title="Режим обновления экрана (GL16 mode)" android:summary="Режим GL16"/>
    </PreferenceCategory>

      <PreferenceCategory android:title="Режима рабочего стола">
       <CheckBoxPreference android:key="homeMode" android:summaryOff="Запускаться как обычное приложение" android:summaryOn="Запускаться как рабочий стол" android:title="Режим работы при вызове кнопкой Home" android:persistent="true" android:defaultValue="true"></CheckBoxPreference><CheckBoxPreference android:key="libraryMode" android:summaryOff="Запускаться как обычное приложение" android:summaryOn="Запускаться как рабочий стол" android:title="Режим работы при вызове кнопкой Library" android:persistent="true" android:defaultValue="true"></CheckBoxPreference><CheckBoxPreference android:key="shopMode" android:summaryOff="Запускаться как обычное приложение" android:summaryOn="Запускаться как рабочий стол" android:title="Режим работы при вызове кнопкой Shop" android:persistent="true" android:defaultValue="true"></CheckBoxPreference><CheckBoxPreference android:key="returnToMain" android:summaryOn="После запуска вернуться на главную страницу" android:title="Поведение при запуске приложения" android:persistent="true" android:defaultValue="false" android:summaryOff="После запуска остаться на странице с приложениями"></CheckBoxPreference><CheckBoxPreference android:key="filterSelf"    android:summaryOff="Показывать все приложения, включая себя" android:summaryOn="Не показывать себя в списке приложений" android:title="Убрать себя из списка приложений" android:persistent="true" android:defaultValue="true"></CheckBoxPreference>
       
       
       <CheckBoxPreference android:key="dateUS"        android:summaryOff='"Европейский" (dd.mm.yyyy)' android:summaryOn='"Американский" (mm/dd/yyyy)' android:title="Формат отображения даты/времени" android:persistent="true" android:defaultValue="false"></CheckBoxPreference>
       
       
      </PreferenceCategory>

      <PreferenceCategory android:title="Прокрутка">
       <EditTextPreference android:key="scrollPerc"    android:enabled="true" android:title='Шаг "быстрой" прокрутки' android:selectable="true" android:persistent="true" android:defaultValue="10" android:summary='Шаг "быстрой" прокрутки кнопками (проценты)' android:numeric="integer"></EditTextPreference>
       <CheckBoxPreference android:key="customScroll"  android:summaryOff="Использовать системную полосу прокрутки" android:summaryOn="Использовать собственную полосу прокрутки" android:title="Собственная полоса прокрутки" android:persistent="true" android:defaultValue="true"></CheckBoxPreference>
       <EditTextPreference android:key="scrollWidth"   android:enabled="true" android:title="Ширина полосы прокрутки" android:selectable="true" android:persistent="true" android:defaultValue="25" android:summary="Ширина собственной полосы прокрутки... (пикс.)" android:numeric="integer"></EditTextPreference>
       <EditTextPreference android:key="scrollPad"     android:enabled="true" android:title="Отступ полосы прокрутки" android:selectable="true" android:persistent="true" android:defaultValue="10" android:summary="Левый отступ собственной полосы прокрутки... (пикс.)" android:numeric="integer"></EditTextPreference>
      </PreferenceCategory>

      <PreferenceCategory android:title="Поиск">
       <EditTextPreference android:key="searchSize"    android:enabled="true" android:title="Количество результатов поиска" android:selectable="true" android:persistent="true" android:defaultValue="5000" android:summary="Количество выдаваемых результатов поиска, не более чем... (файлов)" android:numeric="integer"></EditTextPreference>
       <EditTextPreference android:key="searchReport"  android:enabled="true" android:title="Уведомление о состоянии поиска" android:selectable="true" android:persistent="true" android:defaultValue="100" android:summary="Сообщать о состоянии поиска каждые... (сек)" android:numeric="integer"></EditTextPreference>
       <EditTextPreference android:key="searchRoot"    android:enabled="true" android:title="Начальные папки поиска" android:selectable="true" android:persistent="true" android:defaultValue="/media,/sdcard" android:summary="Поиск всегда начинается с папок..."></EditTextPreference>
      </PreferenceCategory>

      <PreferenceCategory android:title="Внутренний просмотр/редактирование">
       <EditTextPreference android:key="viewerMaxSize" android:enabled="true" android:title="Ограничение просмотра файлов" android:selectable="true" android:persistent="true" android:defaultValue="1048576" android:summary="Размер просматриваемого файла не может быть больше чем... (байт)" android:numeric="integer"></EditTextPreference>
       <EditTextPreference android:key="editorMaxSize" android:enabled="true" android:title="Ограничение редактирования файлов" android:selectable="true" android:persistent="true" android:defaultValue="262144" android:summary="Размер редактируемого файла не может быть больше чем... (байт)" android:numeric="integer"></EditTextPreference>
      </PreferenceCategory>


      <PreferenceCategory android:title="История и избранное">
       <EditTextPreference android:key="lruSize"       android:enabled="true" android:title="Недавно открытые" android:selectable="true" android:persistent="true" android:defaultValue="30" android:summary='Сохранять в списке "Недавно открытых" последние... (файлов)' android:numeric="integer"></EditTextPreference>
       <EditTextPreference android:key="favSize"       android:enabled="true" android:title="Избранное" android:selectable="true" android:persistent="true" android:defaultValue="30" android:summary='Сохранять в списке "Избранного"... (файлов)' android:numeric="integer"></EditTextPreference>
       <EditTextPreference android:key="appLruSize"    android:enabled="true" android:title="Недавно запущенные приложения" android:selectable="true" android:persistent="true" android:defaultValue="30" android:summary='Сохранять в списке "Недавно запущенных приложений" последние... (приложений)' android:numeric="integer"></EditTextPreference>
       <EditTextPreference android:key="appFavSize"    android:enabled="true" android:title="Избранные приложения" android:selectable="true" android:persistent="true" android:defaultValue="30" android:summary='Сохранять в списке "Избранных приложений"... (приложений)' android:numeric="integer"></EditTextPreference>
      </PreferenceCategory>

	 <PreferenceCategory android:title="Подтверждения">
       <CheckBoxPreference android:key="confirmFileDelete"        android:summaryOff="Удалять файлы без подтверждения" android:summaryOn="Запрашивать подтверждение при удалении файла" android:title="Удаление файла" android:persistent="true" android:defaultValue="true"></CheckBoxPreference>
       <CheckBoxPreference android:key="confirmDirDelete"         android:summaryOff="Удалять папки без подтверждения" android:summaryOn="Запрашивать подтверждение при удалении папки" android:title="Удаление папки" android:persistent="true" android:defaultValue="true"></CheckBoxPreference>
       <CheckBoxPreference android:key="confirmNonEmptyDirDelete" android:summaryOff="Рекурсивно удалять не пустые папки без подтверждения (потенциально опасное действие)" android:summaryOn="Запрашивать подтверждение при рекурсивном удалении не пустой папки" android:title="Удаление не пустой папки" android:persistent="true" android:defaultValue="true"></CheckBoxPreference>
     </PreferenceCategory>
     
</PreferenceScreen>
